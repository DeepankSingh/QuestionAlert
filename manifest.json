{
  "manifest_version": 3,
  "name": "Chegg Expert Monitor",
  "version": "1.0.0",
  "description": "Auto-refresh and monitor Chegg Expert Q&A pages for specific keywords gives sound alerts",
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://expert.chegg.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://expert.chegg.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chegg Expert Monitor",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["alert.mp3"],
      "matches": ["https://expert.chegg.com/*"]
    }
  ]
}